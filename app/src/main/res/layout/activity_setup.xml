<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_household_listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.aku.hassannaqvi.uenmd_hhlisting.activities.ui.SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <!--DISTRICT (Name)-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/hh02" />

            <EditText
                android:id="@+id/hh02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="9"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/hh03" />

        <TextView
            android:id="@+id/hh03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center"
            android:text="@string/hh03"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold" />

        <!--// Structure Type-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hh04" />

        <RadioGroup
            android:id="@+id/hh04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <RadioButton
                android:id="@+id/hh04a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hh04a" />

            <RadioButton
                android:id="@+id/hh04b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hh04b" />

            <RadioButton
                android:id="@+id/hh04g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hh04g" />

            <RadioButton
                android:id="@+id/hh04h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hh04h" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/fldGrpHH04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <!--Are there more than one Families?-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="70"
                    android:text="@string/hh05" />

                <Switch
                    android:id="@+id/hh05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="30"
                    android:textOff="@string/no"
                    android:textOn="@string/yes" />
            </LinearLayout>

            <!--How many Families?-->
            <EditText
                android:id="@+id/hh06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:digits="1234567890"
                android:hint="@string/hh06"
                android:inputType="number"
                android:maxLength="2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hh07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/hh07"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnAddChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Add Household" />
        </LinearLayout>

        <!--Family Letter-->

        <Button
            android:id="@+id/btnAddHousehold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Goto Next Structure"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnChangePSU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Change PSU Number"
            android:visibility="gone" />
    </LinearLayout>


</ScrollView>
